---

enum Type {
	linkedIn = 'LinkedIn',
	gitHub = 'GitHub',
	twitter = 'Twitter',
	instagram = 'Instagram',
	email = 'Email',
	bluesky = 'BlueSky',
	cv = 'CV',
}

const socials = [
	{
		name: Type.email,
		url: 'matt@ryles.com',
		icon: 'assets/svg/icons/email.svg',
		color: '',
	},
	{
		name: Type.cv,
		url: 'https://ryles.com/Matt-Ryles-CV.pdf',
		icon: 'assets/svg/icons/cv.svg',
		color: '',
	},
	{
		name: Type.gitHub,
		url: 'https://github.com/mattryles',
		icon: 'assets/svg/icons/github.svg',
		color: '',
	},
];

const getColor = (type: Type) => socials.find((social) => social.name === type)?.color;
const getClass = (type: Type) =>
	`scale-100 rounded-full border-2 border-gray-950 dark:border-white ${getColor(
		type,
	)} transition duration-300 hover:scale-110 animate-zoom-in`;
---

<div class="grid grid-cols-3 gap-3 duration-500 md:grid-flow-col md:gap-2">
	{
		socials.map((social) => {
			const href = social.name === Type.email ? `mailto:${social.url}` : social.url;
			return (
				<a
					aria-label={social.name}
					class={getClass(social.name)}
					href={href}
					target="_blank"
					rel="nofollow noopner"
				>
					<picture>
						<source srcset={social.icon.replace('.svg', '-dark.svg')} media="(prefers-color-scheme: dark)" />
						<img class="size-14 p-3 md:size-16" src={social.icon} alt={social.name} />
					</picture>
				</a>
			);
		})
	}
</div>
